//- creating posts container block
mixin createPostForm(userLoggedIn)
    .postFromContainer 
        .userImageContainer
            img(src=userLoggedIn.profilePic, alt="Users profile picture") 
        .textareaContainer 
            textarea#postTextarea.textareaContainer(placeholder="Whats your post contains?")
            .buttonsContainer 
                 button#submitPostButton(disabled="") Post

mixin createReplyModal(userLoggedIn)
    #replyModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='replyModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#replyModalLabel.modal-title Comment post
                    
                    span.closeBtn(aria-hidden='true' type='button', data-dismiss='modal', aria-label='Close') &times;
                .modal-body
                    #originalPostContainer
                    .postFormContainer
                        .mainContentContainer
                            .userImageContainer
                                img(src=userLoggedIn.profilePic, alt="Users profile picture") 
                            .textareaContainer
                                textarea#replypostTextarea(placeholder="Whats your post contains?")
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    button#submitReplyButton.btn.btn-primary(type='button', disabled="") Reply
mixin createDeletePostModal()
    #deletePostModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deletePostModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#deletePostModalLabel.modal-title Delete the post?
                    span.closeBtn(aria-hidden='true' type='button', data-dismiss='modal', aria-label='Close') &times;
                .modal-body
                    p You won't be able to delete this.
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    button#deletePostButton.btn.btn-primaryDel(type='button') Delete

mixin createPostModals(userLoggedIn)
    +createReplyModal(userLoggedIn)
    +createDeletePostModal()

//- displaying all in user profile
//- user - whom we want to follow
//- isFollowing -are we actualy following it 
mixin createFollowButton(user, isFollowing)
    //- creating variable it pag with dash | - |
    - if (user.role === 'ADMIN')
        - text = isFollowing ? "In Favourites" : "Add Favourite"
        - buttonClass = isFollowing ? "followButton following" : "followButton"
        //- when we using variable we can start only with breakets not with dash
        button(class=buttonClass, data-user=user._id) #{text}

